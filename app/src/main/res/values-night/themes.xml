<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.VillEdgeResident" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="CustomEditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">#888888</item>
    </style>
    <style name="CustomButton">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">#FFFFFF</item> <!-- White text -->
        <item name="android:textStyle">bold</item> <!-- Optional for better visibility -->
        <item name="android:padding">12dp</item>
    </style>
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColorHint">#0A3832</item>
        <item name="android:textColor">#0A3832</item>
    </style>




</resources>